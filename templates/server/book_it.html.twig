    {% if is_granted('ROLE_USER') %}
        <div class="container">
        <center><div id="reservation_form">

          <input type="hidden" id="email" data-value={{ app.user.username }}>

            </div></center></div>
    {% else %}
        <center><div id="reservation_info">
                <div class="alert alert-danger">To book an apartment, please <a href="{{ path('login') }}"> login</a> first!</div>
        </div></center>
    {% endif %}
        <div class="container">
