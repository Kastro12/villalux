{% extends 'base.html.twig' %}

{% block title %}    Gallery {% endblock %}

{% block stylesheets %}

    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}"/>
    <link href="{{ asset('css/ie10-viewport-bug-workaround.css') }}" rel="stylesheet">
    <link href="{{ asset('css/dashboard.css') }}" rel="stylesheet">

{% endblock %}

{% block body %}

    <div class="all">

        {% include 'server/hederS.html.twig' %}
        <br/><br/><br/><br/>
        <div class="container">
            {% if error %}
                <div class="alert alert-danger">
                {#    {{ error.messageKey|trans(error.messageData, 'security') }} #}
                    {{ error.message | replace({"Bad credentials." : "Invalid username or password."}) }}
                </div>
            {% endif %}
        <div class="col-sm-3"></div>
            <div class="col-sm-6" id="login_form">
                <b id="text1">Login</b>
                <br/><br/><br/>
                {{ form_start(form) }}
                    {{ form_row(form._username) }}
                    {{ form_row(form._password) }}
                    {{ form_widget(form._token) }}

                <button type="submit" class="btn btn-primary btn-lg">login</button>
                {{ form_end(form) }}
            <br/>
                <b><a href="{{ path('registration') }}">If you do not have account,<u> make it now.</u></a></b>


            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}

    {{ parent() }}

{% endblock %}